<table class="table">
  <thead>
    <tr>
      <th scope="col">SN</th>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">Posted Blogs</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |user, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= get_username(user.id) %></td>
        <td><%= user.email %></td>
        <td><%= get_num_of_posts(user.id) %></td>
        <td><%= link_to "View Blogs", user_posts_path(id: user.id), method: :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>
