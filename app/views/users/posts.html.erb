<div class = "row">
  <div class="col-lg-12 col-md-12">
    <% @posts.each do |post| %>
      <article class="post-preview">
        <%= link_to post do %>
          <h2 class="post-title"><%= post.title %></h2>
          <% if post.image? %>
            <div class="image-wrapper">
              <%== image_tag(post.image.url, alt: 'Image') %>
            </div>
          <% end %>
          <h3 class="post-subtitle"><%= truncate(post.content, length: 100) %></h3>
        <% end %>
        <div class="row">
          <div class="col-lg-9 col-md-9">
            <p class="post-meta">Posted on
              <%= get_datetime(post.created_at) %>
            </p>
          </div>
          <div class="col-lg-3 col-md-3">
            <% if post.is_approved %>
              <span class="green">Status: Approved</span>
            <% else %>
              <span class="red">Status: Pending </span>
            <% end %>
          </div>
        </div>
      </article>
      <hr>
    <% end %>
  </div>
</div>
